<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        app:cardCornerRadius="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recycle_item_bg_01"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recycle_item_result_song_img"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@mipmap/logo" />

            <LinearLayout
                android:id="@+id/recycle_item_result_song_ll_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:background="@drawable/recycle_item_bg_01"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recycle_item_result_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="歌曲名称"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recycle_item_result_song_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="歌手"
                    android:textColor="#DBDBDB"
                    android:textSize="12sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/recycle_item_result_song_more"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:clipChildren="true"
                android:src="@android:drawable/stat_sys_download" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
