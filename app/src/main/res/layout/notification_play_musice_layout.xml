<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNotBg"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notif_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="7.5dp"
        android:contentDescription="这是专辑图片"
        android:background="@mipmap/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/notif_item_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="暂无数据"/>

            <ImageView
                android:id="@+id/notif_item_close"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/notif_item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:src="@mipmap/m_love_off" />

            <ImageView
                android:id="@+id/notif_item_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@mipmap/m_icon_player_previous_normal" />

            <ImageView
                android:id="@+id/notif_item_play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@mipmap/m_icon_player_play_normal" />

            <ImageView
                android:id="@+id/notif_item_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@mipmap/m_icon_player_next_normal" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>